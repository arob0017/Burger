<h1>Cats!</h1>

<h2>Eat me!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-burger">

    <div class="form-group">
        <label for="burgername">Burger Name:</label>
        <input type="text" id="burgerName" class="burger-name" name="name">
    </div>

    <div class="form-group">
        <label for="">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> To eat!<br>
        <input type="radio" name="devoured" value="0"> Devoured
    </div>

    <button class="burgerAdd" type="submit">Add Burger</button>
</form>